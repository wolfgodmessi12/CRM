<%
   # app/views/my_contacts/broadcast/actions/_show_calendar.html.erb
   #
   # Example:
   #   render partial: 'my_contacts/broadcast/actions/show_calendar', locals: { presenter: MyContacts::Presenter }
   #
   # Instance Variables:
   #   none
   #
   # Local Variables:
   #   (req) presenter: (MyContacts::Presenter)
   #
   return unless local_assigns.dig(:presenter).is_a?(MyContacts::Presenter)
-%>
<%= bootstrap_calendar_field(
      field:        'user_action_when',
      value:        Time.current.in_time_zone(presenter.client.time_zone).strftime('%m/%d/%Y %H:%M %p'),
      label:        { title: 'When?' },
      html_options: { id: 'contacts-calendar-string', required: true },
      flatpickr:    { include_time: true, mode: 'single', on_change: 'updateTimeToComplete();' },
      messages:     { note: 'A scheduled time must be chosen.' }
    ) %>
