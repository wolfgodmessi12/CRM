<%
  # app/views/my_contacts/broadcast/_header.html.erb
  #
  # Example:
  #   render partial: 'my_contacts/broadcast/header', locals: { presenter: MyContacts::Presenter }
  #
  # Instance Variables:
  #   none
  #
  # Local Variables:
  #   (req) presenter: (MyContacts::Presenter)
  #
  return unless local_assigns.dig(:presenter).is_a?(MyContacts::Presenter)
-%>
<h1 class="page-title"><i class="fa fa-address-book mr-2"></i>My Contacts</h1>

<div class="message-header-actions">
  <div class="dropdown d-flex flex-row-reverse">
    <div class="ml-2 mt-1">
      <button class="btn btn-sm btn-icon btn-light d-xl-none" data-toggle="sidebar"><i class="fa fa-angle-double-left"></i></button>
    </div>

    <% if presenter.broadcast %>
      <div class="avatar has-badge">
        <%= link_to my_contacts_groupactions_path, class: 'btn btn-sm btn-icon btn-secondary', data: { turbo: true, turbo_stream: true } do %>
          <i class="fa fa-users-cog"></i>
        <% end %>
        <span class="tile tile-xs tile-circle bg-red" id="mycontacts_group_action_count_<%= current_user.id -%>"><%= presenter.group_actions.count -%></span>
      </div>
    <% end %>

  </div>
</div>
