<%
# app/views/surveys/_import.html.erb
#
# Example:
#   render partial: 'surveys/import'
#
# Instance Variables:
#   none
#
# Local Variables:
#   none
#
-%>
<%= form_tag surveys_import_path, { builder: LooperFormBuilder, remote: true, method: :post } do %>
  <%= bootstrap_text_field(
        field:        'share_code',
        label:        { title: "#{::Surveys::Survey.title} Share Code" },
        html_options: { placeholder: 'Shared Code', autofocus: true }
      ) %>
  <%= bootstrap_submit_buttons(
        buttons: [{ title: 'Import', disable_with: 'Importing' }]
      ) %>
<% end %>
