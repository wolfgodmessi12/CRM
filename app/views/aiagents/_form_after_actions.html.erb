<%
  # app/views/aiagents/_form_after_actions.html.erb
  # 
  # Example:
  #   render 'form_after_actions', presenter: presenter
  # 
  # Required Instance Variables:
  #   none
  # 
  # Required Local Variables:
  #   presenter: (Uiagent::Presenter)
  # 
-%>

<div class="card-header border-0" id="form_after_actions">
  <button class="btn btn-reset collapsed prevent-default" type="button" data-toggle="collapse" data-target="#fieldset_after_actions_<%= presenter.agent.id -%>" aria-expanded="false" aria-controls="fieldset_after_actions_<%= presenter.agent.id -%>">
    <span class="collapse-indicator mr-2"><i class="fa fa-fw fa-caret-right"></i></span>
    <span>After Session Ends</span>
  </button>
</div>
<div id="fieldset_after_actions_<%= presenter.agent.id -%>" class="collapse" aria-labelledby="aiagent_edit_accordion" data-parent="#aiagent_edit_accordion">
  <div class="card-body pt-0">
    <%= render partial: 'campaigns/action_fields', locals: { 
          client: presenter.agent.client,
          campaign_id: presenter.agent.campaign_id, campaign_id_field: 'agent[campaign_id]',
          stop_campaign_ids: presenter.agent.stop_campaign_ids, stop_campaign_ids_field: 'agent[stop_campaign_ids]',
          group: presenter.agent.group, group_id_field: 'agent[group_id]',
          tag: presenter.agent.tag, tag_id_field: 'agent[tag_id]',
          stage_id: presenter.agent.stage_id, stage_id_field: 'agent[stage_id]',
          first_trigger_types: [115, 135, 150, 152]
        } %>
  </div>
</div>
