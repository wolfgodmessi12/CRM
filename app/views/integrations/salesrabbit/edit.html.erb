<%
	# app/views/integrations/salesrabbit/edit.html.erb
	# 
	# Example:
	# 	render "integrations/salesrabbit/edit"
	# 
	# Required Instance Variables:
	# 	none
	# 
	# Required Local Variables:
	#   none
	# 
-%>
<div class="page">
  <header class="page-cover">
    <div class="text-center">
      <div><%= image_tag('integrations/salesrabbit/logo_red.png', { class: 'img-fluid rounded-0 mx-auto d-block', style: 'max-width:500px;max-height:110px;' })-%></div>
      <h2 class="h4 mt-4 mb-0" id="show_user_fullname">SalesRabbit Integration</h2>
      <div class="my-1">
        <i class="fa fa-star text-yellow"></i> <i class="fa fa-star text-yellow"></i> <i class="fa fa-star text-yellow"></i> <i class="fa fa-star text-yellow"></i> <i class="fa fa-star text-yellow"></i>
      </div>
      <!-- <p class="text-muted"> Project Manager @CreativeDivision </p> -->
      <!-- <p> Huge fan of HTML, CSS and Javascript. Web design and open source lover. </p> -->
    </div>
    <div class="cover-controls cover-controls-bottom">
      <%= link_to '<i class="fa fa-question"></i>'.html_safe, integrations_salesrabbit_integration_instructions_path, { class: 'btn btn-sm btn-icon btn-secondary', id: 'button_help', remote: true } %>
      <!-- <a href="#" class="btn btn-light" data-toggle="modal" data-target="#followersModal">2,159 Followers</a> <a href="#" class="btn btn-light" data-toggle="modal" data-target="#followingModal">136 Following</a> -->
    </div>
  </header>

  <nav class="page-navs">
    <div class="nav-scroller">
      <div class="nav nav-center nav-tabs">
        <%= link_to 'API Key', integrations_salesrabbit_api_key_path, { class: 'nav-link', id: 'link_api_key', remote: true } %>
        <%= link_to 'Contacts', integrations_salesrabbit_contact_path, { class: 'nav-link', id: 'link_contacts', remote: true } %>
        <%= link_to 'Leads', integrations_salesrabbit_leads_path, { class: 'nav-link', id: 'link_leads', remote: true } %>
        <%= link_to 'Statuses', integrations_salesrabbit_status_path, { class: 'nav-link', id: 'link_statuses', remote: true } %>
        <%= link_to 'Users', integrations_salesrabbit_user_path, { class: 'nav-link', id: 'link_users', remote: true } %>
        <!-- <a class="nav-link active" href="user-activities.html">Activities <span class="badge">16</span></a> -->
      </div>
    </div>
  </nav>

  <div class="page-inner">
    <header class="page-title-bar" id="breadcrumb">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item active">
            <%= link_to(edit_integrations_salesrabbit_integration_path, { class: 'nav-link', remote: true }) do %>
              <i class="breadcrumb-icon fa fa-angle-left mr-2"></i>Overview
            <% end %>
          </li>
        </ol>
      </nav>
    </header>

    <div class="page-section" id="integration_page_section">
      <%= render partial: 'integrations/salesrabbit/overview' %>
    </div>
  </div>
</div>
