<%
  # app/views/integrations/searchlight/V1/js/_show.js.erb
  #
  # Example:
  #   render partial: 'integrations/searchlight/V1/js/show', locals: { cards: Array }
  #
  # Instance Variables:
  #   (req) @client_api_integration: (ClientApiIntegration)
  #
  # Local Variables:
  #   (req) cards: Array
  #
  presenter = Integrations::Searchlight::V1::Presenter.new(client_api_integration: @client_api_integration)
-%>
// Connection
<% if cards.include?('connections_edit') %>
  $('#integration_page_section').html('<%= j render partial: 'integrations/searchlight/v1/connections/edit', locals: { presenter: } -%>');
<% end %>

// Instructions
<% if cards.include?('instructions_show') %>
  $('#integration_page_section').html('<%= j render partial: 'integrations/searchlight/v1/instructions/show', locals: { presenter: } -%>');
<% end %>

// Overview
<% if cards.include?('overview') %>
  $('#integration_page_section').html('<%= j render partial: 'integrations/searchlight/v1/overview', locals: { presenter: } -%>');
<% end %>

// Revenue Generation
<% if cards.include?('revenue_gen_edit') %>
  $('#integration_page_section').html('<%= j render partial: 'integrations/searchlight/v1/revenue_gen/edit', locals: { presenter: } -%>');
<% end %>

<%= render partial: 'snippets/js/flash_alert', formats: [:js] %>

Looper.init();
