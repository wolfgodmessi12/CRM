<%
  # app/views/integrations/callrail/v3/events/_event_type_fields.html.erb
  #
  # Example:
  #   render partial: 'integrations/callrail/v3/events/event_type_fields', locals: { presenter: Presenter }
  #
  # Instance Variables:
  #   (req) @client_api_integrations: (ClientApiIntegrations)
  #
  # Local Variables:
  #   none
  #
  presenter = local_assigns.dig(:presenter) || Integrations::Callrail::V3::Presenter.new(client_api_integration: @client_api_integration)
  presenter.event = @event
  presenter.account_and_company_id = presenter.event[:account_company_id]
-%>

<% case presenter.event[:type] %>
<% when 'outbound_post_call' %>
  <%= render partial: 'outbound_post_call_fields', locals: { presenter: } %>
<% when 'form_submission' %>
  <%= render partial: 'form_submission_fields', locals: { presenter: } %>
<% else %>
  <%= render partial: 'inbound_post_call_fields', locals: { presenter: } %>
<% end %>
