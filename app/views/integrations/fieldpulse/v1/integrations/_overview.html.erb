<%
  # app/views/integrations/fieldpulse/_overview.html.erb
  #
  # Example:
  #   render partial: 'integrations/fieldpulse/overview'
  #
  # Instance Variables:
  #   none
  #
  # Local Variables:
  #   (req) presenter: (Integrations::Fieldpulse::V1::Presenter)
  #
  return unless local_assigns.dig(:presenter).is_a?(Integrations::Fieldpulse::V1::Presenter)
-%>
<div class="card card-fluid card-margins-mobile">
  <h6 class="card-header">Overview</h6>

  <%= render partial: 'integrations/common/overview', locals: { integration: 'fieldpulse' } %>

  <div class="card-body">

    <div class="section-block">
      <div class="metric-row metric-flush">

        <div class="col-4 py-2">
          <%= link_to edit_integrations_fieldpulse_v1_connections_path, {
                class: 'metric metric-bordered align-items-center',
                id:    'link_connection',
                data:  {
                  turbo:        true,
                  turbo_stream: true
                }
              } do %>
            <h2 class="metric-label">FieldPulse Connection</h2>
            <p class="metric-value h3">
              <span class="value">
                <% if presenter.connection_good? %>
                  <i class="fa fa-link text-success"></i>
                <% else %>
                  <i class="fa fa-link text-danger"></i>
                <% end %>
              </span>
            </p>
          <% end %>
        </div>

      </div>
    </div>

  </div>

  <div class="card-body">
    <div class="form-group">
    </div>
  </div>
</div>

<script>
  $(function() {
    $('.nav-link').removeClass('active');
    $('#link_overview').addClass('active');
    $('#breadcrumb').hide();
  });
</script>
