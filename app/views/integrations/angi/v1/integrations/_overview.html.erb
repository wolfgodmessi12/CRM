<%
  # app/views/integrations/angi/_overview.html.erb
  #
  # Example:
  #   render partial: 'integrations/angi/overview'
  #
  # Instance Variables:
  #   none
  #
  # Local Variables:
  #   (req) presenter: (Integrations::Angi::V1::Presenter)
  #
  return unless local_assigns.dig(:presenter).is_a?(Integrations::Angi::V1::Presenter)
-%>
<div class="card card-fluid card-margins-mobile">
  <h6 class="card-header">Overview</h6>

  <%= render partial: 'integrations/common/overview', locals: { integration: 'angi' } %>

  <div class="card-body">

    <div class="section-block">
      <div class="metric-row metric-flush">

        <div class="col-4 py-2">
          <%= link_to integrations_angi_v1_events_path, {
                class: 'metric metric-bordered align-items-center',
                id:    'link_connection',
                data:  {
                  turbo:        true,
                  turbo_stream: true
                }
              } do %>
            <h2 class="metric-label">Events</h2>
            <p class="metric-value h3">
              <span class="value text-success">
                <%= presenter.event_count %>
              </span>
            </p>
          <% end %>
        </div>

      </div>
    </div>

  </div>

  <div class="card-body">
    <div class="form-group">
    </div>
  </div>
</div>

<script>
  $(function() {
    $('.nav-link').removeClass('active');
    $('#link_overview').addClass('active');
    $('#breadcrumb').hide();
  });
</script>
