<%
  # app/views/integrations/xencall/_overview.html.erb
  #
  # Example:
  #   render partial: 'integrations/xencall/overview'
  #
  # Required Instance Variables:
  #   none
  #
  # Required Local Variables:
  #   none
  #
-%>
<div class="card card-fluid card-margins-mobile">
  <h6 class="card-header">Overview</h6>

  <%= render partial: 'integrations/common/overview', locals: { integration: 'xencall' } %>

  <div class="card-body">
    <div class="form-group">
      <% if @client_api_integration.api_key.present? %>
        <i class="fa fa-check text-success mr-2"></i>API Key is saved.
      <% else %>
        <i class="fa fa-times text-danger mr-2"></i>API Key is not saved.
      <% end %>
    </div>
    <div class="form-group">
      <% if @client_api_integration.live_mode.to_i == 1 %>
        <i class="fa fa-link text-success mr-2"></i>Connection is Live.
      <% else %>
        <i class="fa fa-link text-danger mr-2"></i>Connection is not Live.
      <% end %>
    </div>
  </div>
</div>

<script>
  $(function() {
    $('.nav-link').removeClass('active');
    $('#link_overview').addClass('active');
    $('#breadcrumb').hide();
  });
</script>
