<%
  # app/views/clients/companies/rows/_texting.html.erb
  #
  # Example:
  #   render partial: 'clients/companies/rows/texting', locals: { presenter: Clients::CompaniesPresenter }
  #
  # Instance Variables:
  #   (req) client: (Client)
  #
  # Local Variables:
  #   (req) presenter: (Clients::CompaniesPresenter)
  #
  return unless local_assigns.dig(:presenter).is_a?(Clients::CompaniesPresenter)
-%>
<tr>
  <%= presenter.company_cell(client) %>
  <td class="align-middle"><%= Friendly.new.date(client.created_at, client.time_zone, false) -%></td>
  <td class="align-middle text-center"><%= client.messages %></td>
  <td class="align-middle text-center"><%= client.text_message_images_allowed ? presenter.success_html : presenter.fail_html %></td>
  <td class="align-middle text-center"><%= number_to_currency(client.text_message_credits.to_d, unit: '') %></td>
  <td class="align-middle text-center"><%= number_to_currency(client.text_image_credits.to_d, unit: '') %></td>
  <td class="align-middle text-center"><%= client.folders.count -%> / <%= client.folders_count -%></td>
  <%= render partial: 'clients/companies/rows/action_buttons', locals: { client: } %>
</tr>
