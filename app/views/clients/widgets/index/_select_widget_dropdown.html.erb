<%
  # app/views/clients/widgets/index/_select_sitechat_dropdown.html.erb
  #
  # Example:
  #   render partial: 'clients/widgets/index/select_sitechat_dropdown', locals: { widget_presenter: Presenter }
  #
  # Required Instance Variables:
  #   @client: Client
  #
  # Required Local Variables:
  #   none
  #
  presenter = local_assigns.dig(:widget_presenter) || Clients::Widgets::Presenter.new(client: @client)
-%>
<div class="dropdown-arrow"></div>
<h6 class="dropdown-header stop-propagation">
  <span>Select a SiteChat</span>
</h6>
<div class="dropdown-divider"></div>
<div class="dropdown-scroll perfect-scrollbar" style="max-height:344px;">

  <% presenter.widgets.each do |widget| %>
    <a href="#" class="dropdown-item option_widget ml-3" data-id="<%= widget.id -%>" data-version="<%= widget.version -%>"><%= widget.widget_name -%> (<%= widget.version -%>)</a>
  <% end %>
</div>
