<%
  # app/views/triggeractions/forms/_360.html.erb
  #
  # Example:
  #   render partial: "triggeractions/forms/360", locals: { presenter: Campaigns::Presenter }
  #
  # Instance Variables:
  #   none
  #
  # Local Variables:
  #   (req) presenter: (Campaigns::Presenter)
  #
  # assign a Lead Source
  #
  return unless local_assigns.dig(:presenter).is_a?(Campaigns::Presenter) && presenter.triggeraction.is_a?(Triggeraction)
-%>
<%= bootstrap_select_tag(
      field:        'triggeraction[lead_source_id]',
      label:        { title: 'Lead Source' },
      html_options: { disabled: presenter.campaign_disabled? },
      options:      { for_select: options_for_lead_source(presenter.client, [presenter.triggeraction.lead_source_id]), blank: 'Select a Lead Source' }
    ) %>
