<%
  # app/views/triggers/forms/_133.html.erb
  #
  # Example:
  #   render partial: 'triggers/forms/133.html', locals: { presenter: Campaigns::Presenter }
  #
  # Instance Variables:
  #   none
  #
  # Local Variables:
  #   (req) presenter: (Campaigns::Presenter)
  #
  # start actions on a Contacts::Estimate or Contacts::Job date (Jobber)
  #
  return unless local_assigns.dig(:presenter).is_a?(Campaigns::Presenter) && presenter.trigger.is_a?(Trigger)
-%>
<div class="row">
  <div class="col-3"></div>
  <div class="col-9">
    <small class="text-muted">
      Campaigns that Start on a Jobber Job Date...
      <ul class="fa-ul">
        <li><span class="fa-li"><i class="fa fa-check text-success"></i></span>Are dynamic (they get their date from a Job date).</li>
        <li><span class="fa-li"><i class="fa fa-check text-success"></i></span>Will locate the last saved Job and fire the first Trigger as defined in Actions.</li>
      </ul>
    </small>
  </div>
</div>

<%= bootstrap_select_tag(
      field:        'data[client_custom_field_id]',
      label:        { title: 'Date Field' },
      html_options: { disabled: presenter.campaign_disabled? },
      options:      { grouped_array: presenter.trigger_options_for_client_custom_field_id('jobber', %w[jobs visits]), selected: presenter.trigger_client_custom_field_id }
    ) %>
