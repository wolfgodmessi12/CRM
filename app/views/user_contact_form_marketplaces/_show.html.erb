<%
	# app/views/user_contact_form_marketplaces/_show.html.erb
	# 
	# Example:
	# 	render partial: "user_contact_form_marketplaces/show"
	# 
	# Required Instance Variables:
	# 	none
	# 
	# Required Local Variables:
	#   none
	# 
	if @user_contact_form.marketplace_image.attached?
		image_tag = cl_image_tag(@user_contact_form.marketplace_image.key, { class: 'img-fluid', secure_distribution: I18n.t("tenant.#{Rails.env}.cloudinary_cname"), transformation: [ width: 200, height: 200, crop: 'fit' ], format: 'png' })
	else
		image_tag = image_tag("tenant/#{I18n.t("tenant.id")}/logo.svg", { class: 'img-fluid', style: 'max-height:60px;' })
	end
-%>
<div class="row">
	<div class="col-4 text-right">
		<%= image_tag %>
	</div>
	<div class="col-8">
		<h2><%= @user_contact_form.form_name -%></h2>
		<p><%= @user_contact_form.description -%></p>
		<h3><%= @user_contact_form.price.zero? ? 'Free' : number_to_currency(@user_contact_form.price.to_d) -%></h3>
	</div>
</div>
