<%
# app/views/user_contact_form_marketplaces/_show_footer.html.erb
#
# Example:
# 	render partial: "user_contact_form_marketplaces/show_footer"
#
# Required Instance Variables:
# 	@user_contact_form: (user_contact_form)
#
# Required Local Variables:
#   none
#
-%>
<%= link_to "#{@user_contact_form.marketplace_ok && @user_contact_form.price.positive? ? 'Buy' : 'Get'} This QuickPage!",
