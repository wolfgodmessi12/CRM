<%
  # app/views/campaigns/_analyze_icon.html.erb
  #
  # Example:
  # 	render partial: "campaigns/analyze_icon", locals: { campaign: Campaign }
  #
  # Instance Variables:
  # 	none
  #
  # Local Variables:
  #   (req) campaign: (Campaign)
  #
  return unless local_assigns.dig(:campaign).is_a?(Campaign)
-%>
<% if campaign.analyzed %>
  <i class="fa fa-check text-success"></i>
<% else %>
  <i class="fa fa-times text-danger"></i>
<% end %>
