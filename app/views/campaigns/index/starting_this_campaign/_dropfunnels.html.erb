<%
  # app/views/campaigns/index/starting_this_campaign/_dropfunnels.html.erb
  #
  # Example:
  #   render partial: 'campaigns/index/starting_this_campaign/dropfunnels', locals: { presenter: Campaigns::Presenter }
  #
  # Instance Variables:
  #   none
  #
  # Local Variables:
  #   (req) presenter: (Campaigns::Presenter)
  #
  return unless local_assigns.dig(:presenter).is_a?(Campaigns::Presenter)
-%>
<% presenter.dropfunnels_events_starting_this_campaign(presenter.campaign.id).each do |data| %>
  <%= link_to "<i>#{image_tag('integrations/dropfunnels/logo-mini.png', { style: 'width:20px;' })}</i>".html_safe,
              integrations_dropfunnels_integration_path(card: data),
              class: 'btn btn-sm btn-icon btn-secondary' %>
<% end %>
