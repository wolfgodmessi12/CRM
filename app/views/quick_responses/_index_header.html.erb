<%
  # app/views/quick_responses/_index_header.html.erb
  #
  # Example:
  #   render partial: 'quick_responses/index_header', locals: { presenter: QuickResponsesPresenter }
  #
  # Instance Variables:
  #   none
  #
  # Local Variables:
  #   (req) presenter:  (QuickResponsesPresenter)
  #
  return unless local_assigns.dig(:presenter).is_a?(QuickResponsesPresenter)
-%>
<div class="d-flex align-items-center justify-content-between">
  <div class="flex-grow-1"><i class="fas fa-edit mr-2"></i> Quick Response</div>
  <div>
    <% if current_user.central_controller.include?('manage_quick_responses') %>
      <%= link_to '<i class="fa fa-plus mr-2"></i>New Quick Response'.html_safe, new_quick_response_path(contact_id: params[:contact_id], message_id: presenter.message_id), remote: true, class: 'btn btn-light' %>
    <% end %>
  </div>
</div>
