<%
  # app/views/welcome/unsubscribe.html.erb
  # 
  # Example:
  #   render 'welcome/unsubscribe'
  # 
  # Required Instance Variables:
  #   @contact: (Contact)
  # 
  # Required Local Variables:
  #   none
  # 
-%>
<section class="position-relative py-5 bg-light">
  <div class="container position-relative">
    <h2 class="text-center"> Email Unsubscribe </h2>
    <p class="lead text-muted text-center mb-5"> Sorry To See You Go </p>
  </div>

  <div class="col-lg-6 offset-lg-3 mb-2 p-3">
    <div class="card">
      <div class="card-body">
        <p class="text-center">You have been unsubscribed<%= ( @contact ? " from emails sent by #{@contact.client.name}" : '' ) -%>.</p>
      </div>
    </div>
  </div>

</section>
