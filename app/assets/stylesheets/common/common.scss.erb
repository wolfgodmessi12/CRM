html,
body {
  margin: 0 !important;
}
label {
  margin-bottom: 0rem;
}
.page-inner {
  padding: 1.5rem 0.5rem;
}
.custom-number {
  flex: 1 1 auto;
}
.tooltip-big {
  max-width: 400px !important; //define whatever width you want
}

.tooltip-inner {
    max-width: 400px !important;
    text-align: left;
}

.modal {
  overflow-y:auto;
}
.card-margins-mobile {
  margin-top: 1rem;
  margin-bottom: 1rem;
  margin-left: 0.25rem;
  margin-right: 0.25rem;

  @media only screen and (min-width: $breakpoint-screen-md-min) {
    margin-left: 1rem;
    margin-right: 1rem;
  }
  @media only screen and (min-width: $breakpoint-screen-lg-min) {
    margin-left: 3rem;
    margin-right: 3rem;
  }
}
.figure-attachment {
  background-color: transparent;
}
.no-left-border .bootstrap-select .custom-select {
  border-left: none;
}

